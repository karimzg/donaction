ARG NODE_VERSION=20.12.0

FROM node:${NODE_VERSION}-alpine as base
ARG ENV=prod
ARG NODE_ENV=production
ENV NODE_ENV=${NODE_ENV}
RUN apk update && apk add --no-cache build-base gcc autoconf automake zlib-dev libpng-dev nasm bash vips-dev git graphicsmagick imagemagick
WORKDIR /usr/src/app

FROM base as build
COPY ./klubr-api/package*.json ./
RUN npm ci --legacy-peer-deps
COPY ./klubr-api .
COPY ./klubr-api/.env.${ENV} ./.env
RUN echo 'Environment'
RUN echo ${ENV}
RUN ls -l
RUN npm run build --ignore-prompts

FROM base as final
COPY ./klubr-api/package*.json ./
COPY ./klubr-api/config /usr/src/app/config/
COPY ./klubr-api/database /usr/src/app/database/
COPY ./klubr-api/public/ /usr/src/app/public/
COPY ./klubr-api/data/ /usr/src/app/data/
COPY ./klubr-api/src/ /usr/src/app/src/
COPY ./klubr-api/types/ /usr/src/app/types/
COPY ./klubr-api/klubr-gcc-config.json /usr/src/app/klubr-gcc-config.json
COPY ./klubr-api/.env.${ENV} ./.env
COPY --from=build /usr/src/app/node_modules /usr/src/app/node_modules
COPY --from=build /usr/src/app/dist /usr/src/app/dist
EXPOSE 1337
CMD ["npm", "run", "start"]
